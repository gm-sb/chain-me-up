<!DOCTYPE html>
<html>
<head>
  <title>ChainMeUp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="push-nav"></div> 
  <%= render :partial => "shared/instructions" %>
  <% if notice %>
  <div class="alert alert-success">
    <a href="#" class="alert-link"><p class="notice"><%= notice %></p></a>
  </div>
  <% end %>

  <% if alert %>
  <div class="alert alert-success">
    <a href="#" class="alert-link"><p class="notice"><%= alert %></p></a>
  </div>
   <% end %>

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <a class="navbar-brand" id="logo" href="#">looseleaf</a> 
  
  <% if user_signed_in?  %>
    
    <%= render :partial => "navigation/logged_in" if !current_user.guest %>
    <%= render :partial => "navigation/guest" if current_user.guest %>
    <p class="navbar-text navbar-right"><%= current_user.username %></p>

    
  <% elsif !user_signed_in?  %>
    <%= render :partial => "navigation/logged_out" %>
  <% end %>
</nav>

<div class="container">
  <%= yield %>
</div>


</body>
</html>
