<%= form_for @tree do |f| %>

  <%= f.label :title %><br/>
  <%= f.text_field :title, :class => "form-control input-lg", :placeholder => "Name your story" %><br/>
  <%= f.label :prompt, "Choose a prompt to start your story" %><br/>

  <%= f.select :prompt, @prompt, {}, {:class => "chosen-select"} %><br/><br/>

  <%= f.label :content %><br/>
  <%= f.text_area :content, :class => "form-control", :placeholder => "Write the first few sentences" %><br/>

  <%= f.submit "create tree", :class => "btn btn-success" %>

<% end %>
