<div class="new-tree">
  <%= form_for @tree, :remote => true do |f| %>

    <%= f.label :title %><br/>
    <%= f.text_field :title, :placeholder => "Name your story" %><br/>
    <hr>
    <%= f.label :prompt, "Choose a prompt" %><br/>
  
    <%= f.select :prompt, @prompt, {:prompt => " "}, {:class => "chosen-select"} %><br/><br/>

    <%= f.label :content %><br/>
    <%= f.text_area :content,  :placeholder => "Write the first few sentences" %><br/>
    <hr>
    <%= f.submit "create tree", :class => "btn btn-success" %>

  <% end %>
</div>